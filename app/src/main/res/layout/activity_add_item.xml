<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add_item.AddItemActivity"
    android:background="@color/uiBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/name_edit_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/rounded_panel_margin_size"
        android:layout_marginLeft="@dimen/rounded_panel_margin_size"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/name_edit_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:text="None"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitEnd"
            android:src="@drawable/rounded_outline_bottom"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager.widget.ViewPager
        android:transitionName="sharedName"
        android:id="@+id/add_item_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_edit_frame"
        android:layout_above="@id/color_edit_button"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/rounded_panel_margin_size"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/color_edit_button"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginRight="@dimen/rounded_panel_margin_size"
        android:layout_marginLeft="@dimen/rounded_panel_margin_size"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/color_edit_button_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/rounded_white_outline_top"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>