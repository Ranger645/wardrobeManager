<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.color_edit.ColorEditActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/color_edit_preview_frame_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/rounded_panel_margin_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/functionality_layout"
        android:background="@android:color/white">

        <FrameLayout
            android:id="@+id/color_edit_preview_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <ImageView
            android:id="@+id/color_edit_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitStart"
            android:src="@drawable/rounded_outline_top"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitEnd"
            android:src="@drawable/rounded_outline_bottom"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/functionality_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginRight="@dimen/rounded_panel_margin_size"
        android:layout_marginLeft="@dimen/rounded_panel_margin_size"
        app:layout_constraintTop_toBottomOf="@id/color_edit_preview_frame_holder"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/color_edit_button_display"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitStart"
            android:src="@drawable/rounded_outline_top"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>