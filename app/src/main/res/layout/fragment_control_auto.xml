<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/light_background_round_rect_bg"
    tools:context=".ui.add_item.ControlAutoFragment">

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/rounded_panel_margin_size"
        android:layout_weight="1"
        android:background="@drawable/primary_round_rect_bg">

        <ImageView
            android:id="@+id/add_trash_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/add_trash_icon"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/rounded_panel_margin_size"
        android:layout_weight="1"
        android:background="@drawable/primary_round_rect_bg">

        <ImageView
            android:id="@+id/add_manual_color_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:src="@drawable/add_manual_color_icon"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/rounded_panel_margin_size"
        android:layout_weight="1"
        android:background="@drawable/primary_round_rect_bg">

        <ImageView
            android:id="@+id/add_edit_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:src="@drawable/add_edit_icon"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackgroundBorderless"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/add_camera_icon"
        android:layout_margin="@dimen/rounded_panel_margin_size"
        android:layout_weight="1"
        android:background="@drawable/primary_round_rect_bg">

        <ImageView
            android:id="@+id/add_camera_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/add_camera_icon"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackgroundBorderless"/>

    </FrameLayout>

</LinearLayout>